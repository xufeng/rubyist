        <span class="position">New comment as</span>
    <% end %>
    <span class="name">
        <% if comment.user %>
            <%= link_to comment.user_nick_name, user_articles_path(comment.user) %>
        <% end %>
    </span>
    <% unless comment.created_at.nil? %>
        <span class="created_at">
            <%= time_ago_in_words comment.created_at %> Ââç
        </span>
    <% end %>
</div>
