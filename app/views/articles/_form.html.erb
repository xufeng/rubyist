<%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title, "标题", :size => 45 %><br />
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :body, "内容" %><br />
        <%= f.text_area :body, :cols => 80, :rows => 20 %>
    </div>
    <div class="field">
      <%= f.label :tag_list, "标签", :size => 45 %><br />
        <%= f.text_field :tag_list %>
    </div>
    <div class="actions">
        <%= f.submit("发表") %>
    </div>
<% end %>
