<h2>重发解锁邮件</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email, "邮箱" %><br />
  <%= f.email_field :email %></p>

  <p><%= f.submit "重发解锁邮件" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>